<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/recipient"
        android:layout_width="314dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:ems="10"
        android:hint="recipient"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendto_sms"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:text="Send sms with SENDTO"
        app:layout_constraintEnd_toEndOf="@+id/recipient"
        app:layout_constraintStart_toStartOf="@+id/recipient"
        app:layout_constraintTop_toBottomOf="@+id/recipient" />

    <Button
        android:id="@+id/smsintent_sms"
        android:layout_width="309dp"
        android:layout_height="56dp"
        android:layout_marginTop="33dp"
        android:text="Send sms with SMS_INTENT"
        app:layout_constraintEnd_toEndOf="@+id/sendto_sms"
        app:layout_constraintStart_toStartOf="@+id/sendto_sms"
        app:layout_constraintTop_toBottomOf="@+id/sendto_sms" />

</androidx.constraintlayout.widget.ConstraintLayout>